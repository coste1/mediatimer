-Ex (./kill):

#include <stdio.h>
#include <sys/types.h>
#include <signal.h>

int main(int argc, char **argv)
{
	if(argc < 2)		// error out if arguments are not present
	{
		printf("usage: ./kill PID");
		return -1;
	}
	
	kill(atoi(argv[1]), SIGKILL); // sends SIGKILL signal to process with
				      // specified ID.
				      // atoi(argv[1]) converts input to int.	
	return 0;
}








